<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ===================================== Fossils to Oil/Chemfuel ======================================== -->
	<RecipeDef>
		<defName>PRF_MakeOilFromFossil</defName>
		<label>make oil from fossil</label>
		<description>Cooking fossils using a slow evaporation system to obtain oil.</description>
		<jobString>Refining oil from fossils.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>9000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_Fossil</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>PRF_Fossil</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PRF_Oil>85</PRF_Oil>
		</products>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>PRF_MakeChemfuelFromFossil</defName>
		<label>make chemfuel from fossil</label>
		<description>A somewhat long proces that extracts huge amounts of chemfuel from fossils.</description>
		<jobString>Refining chemfuel from fossils.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>5000</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_Fossil</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>PRF_Fossil</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>75</Chemfuel>
		</products>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
	</RecipeDef>


