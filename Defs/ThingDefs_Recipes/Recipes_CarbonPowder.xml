<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>PRF_MakeCarbonPowder_Wood</defName>
		<label>make carbon powder from wood</label>
		<description>Burn wood at high temperature to produce carbon powder.</description>
		<jobString>Making carbon powder.</jobString>
		<allowMixingIngredients>false</allowMixingIngredients>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PRF_Carbon>30</PRF_Carbon>
		</products>
		<workAmount>600</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.75</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_Carbon</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>

