	<!--========================= Metal Floors ========================-->
	<TerrainDef ParentName="TileMetalBase">
		<defName>IronTile</defName>
		<label>iron tile</label>
		<renderPrecedence>240</renderPrecedence>
		<description>iron tiles, for that primitive fortress look. Not very pretty and not very clean, but better than dirt.</description>
		<color>(200,183,183)</color>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<Beauty>-1</Beauty>
			<Cleanliness>-0.1</Cleanliness>
		</statBases>
		<costList>
			<PRF_Iron>7</PRF_Iron>
		</costList>
		<designationHotKey>Misc7</designationHotKey>
	</TerrainDef>

	<TerrainDef ParentName="TileMetalBase">
		<defName>CopperTile</defName>
		<label>copper tile</label>
		<renderPrecedence>240</renderPrecedence>
		<description>Copper tiles, for that steampunk look. They are pretty and almost as clean as sterile tile.</description>
		<color>(175,73,27)</color>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<Beauty>2</Beauty>
			<Cleanliness>0.5</Cleanliness>
		</statBases>
		<costList>
			<PRF_Copper>7</PRF_Copper>
		</costList>
		<designationHotKey>Misc7</designationHotKey>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

</Defs>
