<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<DesignatorDropdownGroupDef>
		<defName>PRF_Floor_Materials</defName>
	</DesignatorDropdownGroupDef>

	<TerrainDef ParentName="FloorBase">
		<defName>PRF_CarbonPlateFloor</defName>
		<label>carbon plate</label>
		<description>Carbon fiber plating for that sci-fi look.</description>
		<texturePath>Building/Floors/PRF_HardWeaveFloor</texturePath>
		<color>(200,200,200)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>PRF_Floor_Materials</designatorDropdown>
		<statBases>
			<Beauty>5</Beauty>
			<WorkToBuild>350</WorkToBuild>
		</statBases>
		<costList>
			<PRF_CarbonPlate>1</PRF_CarbonPlate>
		</costList>
		<researchPrerequisites>
			<li>PRF_Research_CarbonFiber</li>
			<li>PRF_Research_AdvancedFlooring</li>
		</researchPrerequisites>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

	<TerrainDef ParentName="FloorBase">
		<defName>PRF_QuartzFloor</defName>
		<label>rough crystal flooring</label>
		<description>Reinforced concrete that has been buffed over, leaving a smooth and slightly reflective finish with a deep blue hue.</description>
		<texturePath>Building/Floors/PRF_TileStone</texturePath>
		<color>(44,90,160)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>PRF_Floor_Materials</designatorDropdown>
		<statBases>
			<Beauty>3</Beauty>
			<WorkToBuild>200</WorkToBuild>
		</statBases>
		<costList>
			<PRF_quartz>1</PRF_quartz>
		</costList>
		<researchPrerequisites>
			<li>PRF_Research_AdvancedFlooring</li>
		</researchPrerequisites>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

	<TerrainDef ParentName="FloorBase">
		<defName>PRF_QuartzFineFloor</defName>
		<label>polished crystal flooring</label>
		<description>Reinforced concrete that has been buffed over, leaving a smooth and slightly reflective finish with a deep blue hue.</description>
		<texturePath>Building/Floors/PRF_GlitterFloor</texturePath>
		<color>(175,198,233)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>PRF_Floor_Materials</designatorDropdown>
		<statBases>
			<Beauty>6</Beauty>
			<WorkToBuild>200</WorkToBuild>
		</statBases>
		<costList>
			<PRF_CrystalPowder>1</PRF_CrystalPowder>
		</costList>
		<researchPrerequisites>
			<li>PRF_Research_AdvancedFlooring</li>
		</researchPrerequisites>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

	<TerrainDef ParentName="FloorBase">
		<defName>PRF_SyntheticDiamondFloor</defName>
		<label>synthetic diamond</label>
		<description>Synthetic diamond - durable, OK to look at, slippery when wet.</description>
		<texturePath>Building/Floors/PRF_TilesDiagonal</texturePath>
		<color>(148,176,180)</color>
		<edgeType>Hard</edgeType>
		<renderPrecedence>150</renderPrecedence>
		<designatorDropdown>PRF_Floor_Materials</designatorDropdown>
		<statBases>
			<Beauty>0</Beauty>
			<WorkToBuild>250</WorkToBuild>
		</statBases>
		<costList>
			<PRF_SyntheticDiamond>1</PRF_SyntheticDiamond>
		</costList>
		<researchPrerequisites>
			<li>PRF_Research_SyntheticDiamond</li>
			<li>PRF_Research_AdvancedFlooring</li>
		</researchPrerequisites>
		<tags>
			<li>FineFloor</li>
		</tags>
	</TerrainDef>

